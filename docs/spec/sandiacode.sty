\definecolor{grayish}{gray}{0.95}
\definecolor{dkgreen}{rgb}{0,0.4,0}

\newcommand{\inlinefile}[1]{{\lstset{basicstyle=\ttfamily,keywordstyle={}}\lstinline$#1$}}

\newenvironment{subItemize}{
\begin{itemize}
}{
\end{itemize}
}


%%% define style & environment for C++ code WITHOUT numbering of lines
\lstdefinestyle{CppCodeStyle}{%
   language=C++,% 
   backgroundcolor=\color{grayish},%
   basicstyle=\ttfamily,%
   showstringspaces=false,%
   belowskip=1em,%
   frame=none,% 
   numbers=none,% 
   mathescape,%
   tabsize=2,% 
   morekeywords={constexpr},%
   emph={value_type},emphstyle={\color{red}},%
   commentstyle=\color{dkgreen},%
   keywordstyle=\color{red}
}
\lstnewenvironment{CppCode}{%
 %\footnotesize%
 \lstset{style=CppCodeStyle}}{%
}

\lstdefinestyle{CppCodeInlineStyle}{%
   language=C++,% 
   backgroundcolor=\color{grayish},%
   basicstyle=\ttfamily,%
   showstringspaces=false,%
   belowskip=1em,%
   frame=none,% 
   numbers=none,% 
   mathescape,%
   tabsize=2,% 
   %emph={value_type},emphstyle={\color{red}},%
   %commentstyle=\color{dkgreen},%
   %keywordstyle=\color{red},%
   morekeywords={constexpr},%
   breaklines=true%
}

\newcommand{\inlinecode}[1]{{\lstset{style=CppCodeInlineStyle}\lstinline$#1$}}

%%% define style & environment for C++ code with numbering of lines
\lstdefinestyle{CppCodeNumbstyle}{%
   language=C++,% 
   backgroundcolor=\color{grayish},%
   basicstyle=\ttfamily,%
   showstringspaces=false,%
   mathescape,%
   belowskip=1em,%
   frame=none,% 
   numbers=left,% 
   numberstyle=\footnotesize,%
   tabsize=2,% 
   commentstyle=\color{dkgreen},%
   morekeywords={constexpr},%
   keywordstyle=\color{red}
}
\lstnewenvironment{CppCodeNumb}{%
 %\footnotesize%
 \lstset{style=CppCodeNumbstyle}}{%
}



